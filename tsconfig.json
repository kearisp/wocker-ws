{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": false,
        "declaration": true,
        "removeComments": true,
        "target": "ES2020",
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./lib",
        "incremental": true,
        "skipLibCheck": true,
        "types": ["node"],
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "packages",
        "lib",
        "dist",
        "**/*.spec.ts"
    ]
}