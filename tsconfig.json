{
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": "./lib/tsconfig.tsbuildinfo",
        "target": "ES2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "types": ["node"],
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "removeComments": true,
        "strictNullChecks": false,
        "exactOptionalPropertyTypes": false,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ]
}
