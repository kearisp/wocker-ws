{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": false,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "removeComments": true,
        "target": "ES2020",
        "allowJs": true,
        "outDir": "./lib",
        "incremental": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "lib",
        "**/*.spec.ts"
    ]
}