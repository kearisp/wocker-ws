{
    "dockerfile": "./Dockerfile",
    "buildArgsOptions": {
        "PHP_VERSION": {
            "message": "PHP version",
            "type": "select",
            "hash": false,
            "options": [
                "5.6",
                "7.3",
                "7.4",
                "8.0",
                "8.2"
            ]
        },
        "MYSQLI_ENABLE": {
            "message": "Enable mysqli?",
            "type": "boolean"
        },
        "PDO_MYSQL_ENABLE": {
            "message": "Enable PDO Mysql?",
            "type": "boolean"
        },
        "GD_ENABLE": {
            "message": "Enable GD?",
            "type": "boolean"
        },
        "COMPOSER_ENABLE": {
            "message": "Install composer?",
            "type": "boolean"
        },
        "ZIP_ENABLE": {
            "message": "Enable zip?",
            "type": "boolean"
        },
        "NODE_VERSION": {
            "type": "select",
            "message": "Node version",
            "options": [
                "none",
                "v17.9.1",
                "v18.16.0"
            ]
        }
    },
    "envOptions": {
        "APACHE_DOCUMENT_ROOT": {
            "type": "string",
            "message": "Apache document root",
            "default": "/var/www"
        }
    },
    "volumeOptions": [
        "./:/var/www"
    ]
}
