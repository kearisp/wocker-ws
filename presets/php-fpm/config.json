{
    "dockerfile": "./Dockerfile",
    "buildArgsOptions": {
        "PHP_VERSION": {
            "message": "PHP version",
            "type": "select",
            "hash": false,
            "options": [
                "8.0",
                "8.1",
                "8.2"
            ]
        },
        "EXTENSIONS": {
            "type": "select",
            "multiple": true,
            "message": "Extensions",
            "options": {
                "MYSQLI_ENABLE": "Mysqli",
                "PDO_MYSQL_ENABLE": "PDO",
                "PGSQL_ENABLE": "Pgsql",
                "GD_ENABLE": "GD",
                "ZIP_ENABLE": "Zip",
                "MEMCACHE_ENABLE": "Memcache",
                "MEMCACHED_ENABLE": "Memcached",
                "HTTP_ENABLE": "Raphf+Http",
                "INTL_ENABLE": "Intl",
                "PCNTL_ENABLE": "Pcntl",
                "SOAP_ENABLE": "Soap",
                "XDEBUG_ENABLE": "XDebug",
                "GETTEXT_ENABLE": "GetText",
                "BCMATH_ENABLE": "Bcmath",
                "SOCKETS_ENABLE": "Sockets"
            }
        },
        "COMPOSER_ENABLE": {
            "message": "Install composer?",
            "type": "boolean"
        },
        "WORKDIR": {
            "type": "string",
            "message": "Workdir",
            "default": "/var/www"
        },
        "NGINX_DOCUMENT_ROOT": {
            "type": "string",
            "message": "Nginx document root",
            "default": "/var/www"
        }
    },
    "volumeOptions": [
        "./:/var/www"
    ]
}
